{
  "name": "xbox-controller-api",
  "version-string": "1.0.0",
  "description": "Cross-platform Xbox controller API for mouse, keyboard, media and voice control",
  "homepage": "https://github.com/user/xbox-controller-api",
  "dependencies": [
    {
      "name": "sdl3",
      "version>=": "3.0.0"
    }
  ],
  "features": {
    "x11": {
      "description": "Enable X11 support for Linux",
      "dependencies": [
        {
          "name": "x11",
          "platform": "linux"
        },
        {
          "name": "xtst",
          "platform": "linux"
        }
      ]
    }
  }
}